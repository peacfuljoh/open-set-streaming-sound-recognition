html(lang="en")
    head
        include head.pug
        title Buddybork Dashboard
    body
        header
            h1 Dashboard
        include menu2.pug
        br
        br
        div(style="display: grid; grid-template-columns: 500px 500px;")
            div()
                label(for="modelSelectDropdown", id="modelSelectLabel", style="display:inline;") Model select
                select(id="modelSelectDropdown", style="width:140px; display:inline;")
            div()
                label(for="dataCollectSwitch") Data collect toggle
                br
                label(class="switch", id="dataCollectSwitch")
                    input(type="checkbox", id="dataCollectCheckbox")
