        div(id="progressBarContainer")
            div(id="progressBarBackground")
                div(id="progressBar")
        br
        div(id="detectionsDiv", style="width:1200px; height:350px; mix-blend-mode:multiply")
        br
        div(id="audioMacrosegDiv", style="width:1000px; height:350px; mix-blend-mode:multiply")
        div(id="audioPlayback")
        br
        br
        br

    include foot_scripts.pug
    script(src="/static/index.js")
